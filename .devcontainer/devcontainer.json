{
    "name": "Existing Docker Compose (Extend)",

    "dockerComposeFile": [
        "../docker-compose.yml",
        "docker-compose.yml"
    ],

    "service": "api",

  
    // VS Code'un açacağı klasör, Dockerfile'daki WORKDIR ile AYNI olmalı.
    "workspaceFolder": "/usr/src/app",

    // İsteğe bağlı: VS Code kapanınca konteynerleri de durdurur (Resource busy hatasını azaltır)
    "shutdownAction": "stopCompose",

    // İsteğe bağlı: Konteyner oluşunca otomatik npm install yapar
    // "postCreateCommand": "npm install", 

    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/itsmechlark/features/postgresql:1": {}
    }
}